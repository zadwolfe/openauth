# Database (Vercel Postgres / Neon)
DATABASE_URL=postgres://user:password@host:5432/openauth

# Encryption key for token storage (32 bytes = 64 hex chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# API key — all endpoints require this in the Authorization header
# Generate any secure random string, e.g.: oa_your-secret-key-here
OPENAUTH_API_KEY=

# CORS — comma-separated list of allowed origins (optional)
# If not set, all origins are allowed (dev mode only!)
# Example: https://sayflow.app,https://your-app.com
ALLOWED_ORIGINS=
